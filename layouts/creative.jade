doctype html
html
  head
    block head
      title #{title}
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')

    link(href='/creative/vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/creative/vendor/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic', rel='stylesheet', type='text/css')
    link(href='/creative/vendor/magnific-popup/magnific-popup.css', rel='stylesheet')
    link(href='/creative/css/creative.min.css', rel='stylesheet')

    block neck

  body
    nav#mainNav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            |  Menu 
            i.fa.fa-bars
          a.navbar-brand.page-scroll(href='#page-top') Start Bootstrap
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            if user && user.username
              li: a(href='#{user.defaultReturnUrl}')
                i.fa.fa-user
                |  #{user.username}
            else
              li: a(href='/login/')
                i.fa.fa-user
                |  Sign In        
          ul.nav.navbar-nav.navbar-right
            li: a.page-scroll(href='/') Home
            li: a.page-scroll(href='/about/') About
            li: a.page-scroll(href='/signup/') Sign Up
            li: a.page-scroll(href='/contact/') Contact

    block body
    
    block feet

    script(src='/creative/vendor/jquery/jquery.min.js')
    script(src='/creative/vendor/bootstrap/js/bootstrap.min.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
    script(src='/creative/vendor/scrollreveal/scrollreveal.min.js')
    script(src='/creative/vendor/magnific-popup/jquery.magnific-popup.min.js')
    script(src='/creative/js/creative.min.js')